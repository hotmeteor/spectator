{
  "openapi": "3.0.0",
  "info": {
    "title": "Nullable.3.0",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/users/{user}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "user",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Get single user",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "first_name": {
                      "type": "string",
                      "example": "Joe"
                    },
                    "last_name": {
                      "type": "string",
                      "example": "Bloggs"
                    },
                    "email": {
                      "type": "string",
                      "example": "test@test.com",
                      "nullable": true
                    },
                    "settings": {
                      "type": "object",
                      "properties": {
                        "last_updated_at": {
                          "type": "string",
                          "example": "2020-10-10",
                          "nullable": true
                        },
                        "notifications": {
                          "type": "object",
                          "properties": {
                            "email": {
                              "type": "string",
                              "example": "daily",
                              "nullable": true
                            }
                          }
                        }
                      }
                    },
                    "posts": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "example": "My first post"
                          },
                          "body": {
                            "type": "string",
                            "nullable": true,
                            "example": "Welcome to my blog!"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "get-users-user"
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
